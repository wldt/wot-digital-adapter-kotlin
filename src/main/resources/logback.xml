<configuration>

    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO"> <!-- Your classes will log at INFO by default -->
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Set higher logging levels for noisy libraries to suppress their INFO logs -->
    <logger name="org.eclipse.thingweb" level="WARN"/>
    <logger name="io.netty" level="WARN"/>
    <logger name="com.hivemq.client" level="WARN"/>
    <logger name="org.apache" level="WARN"/> 
    <logger name="io.ktor" level="WARN"/>
    <!-- Add other specific library packages here and set their level to WARN or ERROR -->
    <!-- For example, if Spring is too verbose: -->
    <!-- <logger name="org.springframework" level="WARN"/> -->

</configuration>